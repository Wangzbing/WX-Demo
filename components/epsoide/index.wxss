/* components/epsoide/index.wxss */
.container {
  height: 60rpx;
  display: inline-flex;
  flex-direction: row
}
.index-container {
  display: flex;
  flex-direction: row;
  align-items: baseline;  /*底部对齐 */
}
.plain {
 font-size: 36rpx;
}
.index {
  font-size: 60rpx;
  line-height: 60rpx;
  font-weight: 800;
  margin-right: 14rpx
}
.line {
  height: 44rpx;
  margin-right: 14rpx;
  margin-bottom: 2rpx;
  border-left: 1px solid black
}
.date-container {
  display: flex;
  flex-direction: column;
  margin-top: 8rpx
}
.month {
  font-size: 26rpx;
  line-height: 20rpx
}
.year {
  font-size: 24rpx
}